<section class="side-scroller">
  <div class="subheader">
    <h2><i class="fas fa-medal"></i>  My achievements</h2>
  </div>

  <div class="achievement-card">
    <% if @user_achievements.any? %>
      <% @user_achievements.each do |ach| %>
        <div class="achievement-info">
          <div >
            <h3><%= ach.achievement.title %></h3>
            <%= cl_image_tag ach.achievement.photo.key, class: "next-badge" %>
            <p> <% if ach.progress > ach.achievement.goal %>
                  <%= ach.achievement.goal %>
                <% else %>
                  <%= ach.progress %>
                <% end %>
                (of <%= ach.achievement.goal %>)</p>
          </div>

          <div class="progress-bar">
            <div class="percentage"></div>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= render "shared/no_results" %>
    <% end %>
  </div>

  <%= link_to achievements_path do %>
    <div class="see-more-achievements">
      <p>See more</p>
      <i class="fas fa-chevron-down"></i>
    </div>
  <% end %>
</section>
