<section id="nearby">
  <div class="subheader">
    <h2><i class="fas fa-history"></i>  My histories</h2>
    <%= link_to histories_path do %>
      see more <i class="fa-solid  fa-arrow-right"></i>
    <% end %>
  </div>

  <div class="monuments-scroller">
    <% @histories.each do |history| %>
      <%= link_to history_path(history),
        class: "card-monument",
        style: (history.photo.attached? ? "background-image: linear-gradient(rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 0.7)), url(#{ cl_image_path history.photo.key })" : "") do %>

        <h3><%= history.monument.name %></h3>
        <span><i class="fa-solid fa-location-dot"></i> <%= "#{history.monument.city}, #{history.monument.country_code}" %></span>
      <% end %>
    <% end %>
  </div>
</section>
