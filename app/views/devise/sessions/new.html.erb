<div class="container devise">
  <div class="devise-top-navbar">
    <h3>Log in</h3>
    <%= link_to "Sign up", new_user_registration_path %>
  </div>

  <div class="devise-form">
    <div class="title">
      <h1>LOG IN</h1>
      <h3>Good to see you again!</h3>
    </div>

    <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), data: { turbo: false } do |f|  %>
      <div class="form-field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="form-field" data-controller="toggle-hidden-password">
        <%= f.label :password %>

        <div>
          <%= f.password_field :password, data: {toggle_hidden_password_target: "input" } %>
          <i class="fa-regular fa-eye" data-toggle-hidden-password-target="button" data-action="click->toggle-hidden-password#toggleHiddenPassword"></i>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= f.submit "Confirm", class: "btn-pink" %>
    <% end %>
  </div>

  <div class="devise-back">
    <i class="fa-solid fa-arrow-left"></i>
    <%= link_to "Back", root_path %>
  </div>
</div>
