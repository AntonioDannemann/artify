<h2>Change your password</h2>

<%= form_with model: resource, scope: resource_name, url: registration_path(resource_name),  data: { turbo: false } do |f| %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-field">
    <%= f.label :password do %>
      Password <%= "(#{@minimum_password_length} characters minimum)" if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, label: "New password", required: true, autofocus: true,autocomplete: "new-password" %>
  </div>

  <div class="form-field">
    <%= f.label :password_confirmation, "Confirm your new password" %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
  </div>

  <div class="btn">
    <%= f.submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
