<div class="monuments-scroller">
  <% monuments.each do |mon| %>
    <%= link_to monument_path(mon),
      class: "card-monument",
      style: (mon.photo.attached? ? "background-image: linear-gradient(rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 0.7)), url(#{ cl_image_path mon.photo.key, height: 500, crop: "scale", quality: 80 })" : "") do %>

      <h3><%= mon.name %></h3>
      <span>
        <i class="fa-solid fa-location-dot"></i>
        <% if lat && lng %>
          <%= "#{mon.distance_between(lat, lng)}km away" %>
        <% else %>
          <%= "#{mon.city}, #{mon.country_code}" %>
        <% end %>
      </span>
    <% end %>
  <% end %>
</div>
