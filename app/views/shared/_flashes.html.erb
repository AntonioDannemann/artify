<section id="flashes">
  <% if notice %>
    <div data-controller="flashes" class="transition hidden">
      <i class="fa-solid fa-xmark close" data-action="click->flashes#remove"></i>

      <div role="alert">
        <%= notice %>
      </div>
    </div>
  <% end %>

  <% if alert %>
    <div data-controller="flashes" class="transition hidden">
      <i class="fa-solid fa-xmark close" data-action="click->flashes#remove"></i>

      <div role="alert">
        <%= alert %>
      </div>
    </div>
  <% end %>
</section>
