<div class="monuments" data-search-form-target="list">
  <% if monuments.any? %>
    <%= link_to monument_path(monuments.first),
      class: "card-monument",
      style: (monuments.first.photo.attached? ? "background-image: linear-gradient(rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 0.7)), url(#{ cl_image_path monuments.first.photo.key, height: 500, crop: "scale", quality: 80 })" : "") do %>

      <h3><%= monuments.first.name %></h3>
      <span><i class="fa-solid fa-location-dot"></i> <%= "#{monuments.first.city}, #{monuments.first.country_code}" %></span>
    <% end %>

    <%= render "shared/monuments_scroller", monuments: monuments[1..], lat: nil, lng: nil %>
  <% end %>
</div>
