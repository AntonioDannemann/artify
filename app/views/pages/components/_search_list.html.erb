<div class="monuments" data-search-form-target="list">
  <% if monuments.any? %>
    <%= link_to monument_path(monuments.first),
      class: "monument",
      style: (monuments.first.photo.attached? ? "background-image: linear-gradient(rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 0.7)), url(#{ cl_image_path monuments.first.photo.key })" : "") do %>

      <h3><%= monuments.first.name %></h3>
      <span><i class="fa-solid fa-location-dot"></i> <%= "#{monuments.first.city}, #{monuments.first.country_code}" %></span>
    <% end %>

    <div class="monuments-scroller">
      <% monuments.drop(1).each do |mon| %>
        <%= link_to monument_path(mon),
        class: "monument",
        style: (mon.photo.attached? ? "background-image: linear-gradient(rgba(0, 0, 0, 0.2) 30%, rgba(0, 0, 0, 0.7)), url(#{ cl_image_path mon.photo.key })" : "") do %>

          <h3><%= mon.name %></h3>
          <span><i class="fa-solid fa-location-dot"></i> <%= "#{mon.city}, #{mon.country_code}" %></span>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
