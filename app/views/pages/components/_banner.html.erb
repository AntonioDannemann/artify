<section id="banner">
  <div class="banner-image" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5) 40%, rgba(0, 0, 0, 0.2)), url(<%= cl_image_path @featured_monument.photo.key %>);"></div>

  <div class="banner-overlay">
    <%= link_to monument_path(@featured_monument), class: "featured" do %>
      <span>Landmark of the day</span>
      <h2><%= @featured_monument.name %></h2>
      <span>Learn more <i class="fa-solid  fa-arrow-right"></i></span>
    <% end %>

    <div class="banner-frame" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5) 40%, rgba(0, 0, 0, 0.2)), url(<%= cl_image_path @featured_monument.photo.key %>);">
      <div id="tl"></div>
      <div></div>
      <div id="tr"></div>
      <div></div>
      <div></div>
      <div></div>
      <div id="bl"></div>
      <div></div>
      <div id="br"></div>
    </div>

    <%= form_with model: @history, data: { controller: "camera-form" } do |f| %>
      <%= f.label :photo do %>
        <div class="outer-circle">
          <div class="inner-circle"></div>
        </div>
      <% end %>
      <%= f.file_field :photo, style: "display: none;", accept: "image/*", data: { action: "input->camera-form#submit" }, id: "banner_history_photo" %>
    <% end %>

    <div class="down">
      <i class="fa-solid fa-chevron-down"></i>
    </div>
  </div>
</section>
