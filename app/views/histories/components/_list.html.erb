<div class="histories-list" data-search-histories-target="list">
  <% @histories.each do |history| %>
    <div class="card-history">
      <%= link_to history_path(history),
        class: "monument-photo",
        style: (history.photo.attached? ? "background-image: url(#{ cl_image_path history.photo.key })" : "background-image: url(#{ image_tag "eiffel-logo.png" })") do %>
      <% end %>

      <div class="history-info">
        <h3><%= history.monument.name %></h3>

        <span><i class="fa-solid fa-location-dot"></i> <%= "#{history.monument.city}, #{history.monument.country_code}" %></span>

        <div class="history-date">
          <p><%= history.created_at.strftime('%e %b, %Y') %></p>

          <%= link_to history_path(history), class: "btn-right" do %>
            <i class="fas fa-chevron-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
